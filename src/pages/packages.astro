---
import Layout from '../layouts/Layout.astro';
import PricingCard from '../components/react/PricingCard';
import { Button } from '../components/react/ui/button';

const packages = [
    {
        title: 'Starter',
        price: 'R99',
        description: 'Perfect for small businesses just getting started.',
        features: [
            '5 Professional Email Accounts',
            '5GB Storage per Account',
            'Webmail Access',
            'Basic Spam Protection',
            'Standard Support',
        ],
        highlighted: false,
    },
    {
        title: 'Corporate',
        price: 'R350',
        description: 'Ideal for growing teams needing more resources.',
        features: [
            '20 Professional Email Accounts',
            '10GB Storage per Account',
            'Advanced Spam Protection',
            'Priority Support',
            'Free Domain Registration',
        ],
        highlighted: true,
    },
    {
        title: 'Enterprise',
        price: 'R650',
        description: 'Maximum performance for large organizations.',
        features: [
            'Unlimited Email Accounts',
            '25GB Storage per Account',
            'Premium Spam Filtering',
            '24/7 Dedicated Support',
            'Free Domain & SSL',
        ],
        highlighted: false,
    },
];
---

<Layout title='Packages | Apex Corporate Solutions'>
    <section class='py-20 bg-background text-center'>
        <div class='container mx-auto px-4 md:px-6'>
            <h1 class='text-4xl md:text-6xl font-bold tracking-tight mb-6'>
                Simple, Transparent Pricing
            </h1>
            <p class='text-xl text-muted-foreground max-w-2xl mx-auto mb-16'>
                Choose the plan that fits your business needs. No hidden fees.
            </p>

            <div
                class='grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto items-start'
            >
                {
                    packages.map((pkg) => (
                        <PricingCard
                            title={pkg.title}
                            price={pkg.price}
                            description={pkg.description}
                            features={pkg.features}
                            highlighted={pkg.highlighted}
                        />
                    ))
                }
            </div>
        </div>
    </section>

    <section class='py-16 bg-muted/30 border-t border-border/40'>
        <div class='container mx-auto px-4 md:px-6'>
            <div
                class='bg-background border border-border rounded-2xl p-8 md:p-12 flex flex-col md:flex-row items-center justify-between gap-8 shadow-sm'
            >
                <div class='space-y-4 text-center md:text-left'>
                    <h2 class='text-2xl md:text-3xl font-bold'>
                        Need a Logo Design?
                    </h2>
                    <p class='text-muted-foreground max-w-xl'>
                        Get a professional logo design for your business for
                        just <span class='font-bold text-foreground'>R650</span
                        >. Includes 3 concepts and unlimited revisions.
                    </p>
                </div>
                <a href='/contact'>
                    <Button size='lg' className='rounded-full px-8'>
                        Add to Package
                    </Button>
                </a>
            </div>
        </div>
    </section>
</Layout>
